{
  "manifest_version": 2,
  "name": "Riki's Utils",
  "version": "1.1",
  "offline_enabled": true,
  "browser_action": {
    "default_title": "Riki's Utils",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": ["cookies", "<all_urls>", "tabs", "storage"]
}
