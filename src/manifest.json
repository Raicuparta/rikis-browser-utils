{
  "manifest_version": 2,
  "name": "AS24 Test Server Select",
  "version": "1.5",
  "offline_enabled": true,
  "browser_action": {
    "default_title": "AS24 Test Server Select",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": ["cookies", "*://int.autoscout24.ch/*", "tabs", "storage"],
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://raw.githubusercontent.com/Raicuparta/rikis-browser-utils/simple/gecko-updates.json"
    }
  }
}
